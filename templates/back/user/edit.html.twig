{% extends 'back/base_admin.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}

    <!-- BREADCRUMBS -->
    <div class="row pb-4">
        <div class="col-auto">
            <i class="fa fa-user circular circular-success"></i>
        </div>
        <div class="col pt-3">
            <h1 class="h1 bdc-title">Modifier un utilisateur</h1>
            <span class="text-grey">Gestion des utilisateurs</span>
        </div>
        <div class="col text-right">
            <a href="{{ path('user_index') }}" class="btn btn-success-light btn-md">
                <i class="fa fa-table"></i>
                <span class="px-2 font-weight-normal">Liste</span></a>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-12">
            {{ wo_render_breadcrumbs() }}
        </div>
    </div>
    <!-- BREADCRUMBS -->

    <!-- FORMULAIRE ADD OBJETS -->
    <div class="row">
        <div class="col-6 col-lg-6">
            <div class="box p-4">
                <div class="box p-4">
                    <div class="box-header p-0 pb-2 mb-3"><h3>Informations générales</h3></div>
                    {{ form_errors(form) }}

                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label class="text-grey is-required">Email</label>
                                {{ form_widget(form.username) }}
                                {{ form_errors(form.username) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 col-lg-6">
                            <div class="form-group">
                                <label class="text-grey is-required">Nom</label>
                                {{ form_widget(form.nom) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                        <div class="col-6 col-lg-6">
                            <div class="form-group">
                                <label class="text-grey is-required">Prénom</label>
                                {{ form_widget(form.prenom) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="box p-4">
                    <div class="row">
                        <div class="col-6 col-lg-6">
                            <div class="form-group">
                                <label class="text-grey is-required">Activer</label>
                                {{ form_widget(form.enabled) }}
                                {{ form_errors(form.enabled) }}
                            </div>
                        </div>
                        <div class="col-6 col-lg-6">
                            <div class="form-group">
                                <label class="text-grey is-required">Rôles</label>
                                {{ form_widget(form.roles) }}
                                {{ form_errors(form.roles) }}
                            </div>
                        </div>
                    </div>
                </div>

                <button class="btn btn-success-light">Sauvegarder</button>
                {{ form_end(form) }}

            </div>
        </div>

        <div class="col-6 col-lg-6">
            <div class="box p-4">
                <div class="box p-4">
                    <div class="box-header p-0 pb-2 mb-3"><h3>Changement de mot de passe</h3></div>


                    {{ form_errors(formPassword) }}

                    {{ form_start(formPassword) }}
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label class="text-grey is-required">Mot de passe</label>
                                {{ form_widget(formPassword.password.first) }}
                                {{ form_errors(formPassword.password.first) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label class="text-grey is-required">Répéter le mot de passe</label>
                                {{ form_widget(formPassword.password.second) }}
                                {{ form_errors(formPassword.password.second) }}
                            </div>
                        </div>
                    </div>

                </div>

                <button type="submit" class="btn btn-success-light">Sauvegarder</button>
                {{ form_end(formPassword) }}

            </div>
        </div>
    </div>
    <!-- FORMULAIRE ADD OBJETS -->
{% endblock %}

