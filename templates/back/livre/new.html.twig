{% extends 'back/base_admin.html.twig' %}

{% block title %}Créer un livre{% endblock %}

{% block body %}

    <!-- BREADCRUMBS -->
    <div class="row pb-4">
        <div class="col-auto">
            <i class="fa fa-book circular circular-success"></i>
        </div>
        <div class="col pt-3">
            <h1 class="h1 bdc-title">Créer un livre</h1>
            <span class="text-grey">Gestion des livres</span>
        </div>
        <div class="col text-right">
            <a href="{{ path('livre_index') }}" class="btn btn-success-light btn-md">
                <i class="fa fa-table"></i>
                <span class="px-2 font-weight-normal">Liste</span></a>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-12">
            {{ wo_render_breadcrumbs() }}
        </div>
    </div>
    <!-- BREADCRUMBS -->

    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="box p-4">

                <div class="box-header p-0 pb-2 mb-3">
                <h3>Pré-remplir les informations de votre livre</h3>
                <p class="text-muted font-italic">Pré-remplir les informations via l'ISBN du livre (via la
                    bibliothèque Google Book)</p>
            </div>



                <div class="row mt-3">
                    <div class="col-12">
                        <div class="form-group mb-0">
                            <label class="text-grey is-required">ISBN</label>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="searchInputIsbn" class="form-control" placeholder="ISBN...">
                    </div>
                    <div class="col-md-4 mobile-space">
                        <button type="button" id="searchButtonIsbn" class="btn btn-success-light btn-block">Rechercher
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- FORMULAIRE ADD OBJETS -->
    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="box p-4">
                <div class="row">
                    <div class="col-md-8 col-sm-12">
                        <div class="box p-4">
                            <div class="box-header p-0 pb-2 mb-3"><h3>Informations générales</h3></div>
                            {{ form_errors(form) }}

                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Nom</label>
                                        {{ form_widget(form.nom) }}
                                        {{ form_errors(form.nom) }}
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Auteur</label>
                                        {{ form_widget(form.auteur) }}
                                        {{ form_errors(form.auteur) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Date de sortie</label>
                                        {{ form_widget(form.anneeSortie) }}
                                        {{ form_errors(form.anneeSortie) }}
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Description</label>
                                        {{ form_widget(form.description) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Thème</label>
                                        {{ form_widget(form.theme) }}
                                        {{ form_errors(form.theme) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Ou ajouter un nouveau Thème</label>

                                        <div class="row">
                                            <div class="col-md-8">
                                                <input type="text" class="form-control" id="inputNewTheme"
                                                       placeholder="Nouveau thème..."/>
                                            </div>
                                            <div class="col-md-4">
                                                <button type="button" id="buttonNewTheme"
                                                        class="btn btn-success-light btn-block mobile-space">Ajouter
                                                </button>

                                            </div>
                                        </div>
                                </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Image</label>
                                        {{ form_widget(form.imageFile) }}
                                        {{ form_errors(form.imageFile) }}
                                    </div>
                                    <img class="max-width-10em" id="img-preview-file"/>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Url image</label>
                                        {{ form_widget(form.urlImage) }}
                                        {{ form_errors(form.urlImage) }}
                                    </div>
                                    <img class="max-width-10em" id="img-preview-url"/>
                                </div>
                            </div>
                        </div>

                    </div>


                    <div class="col-md-4 col-sm-12">
                        <div class="box p-4">
                            <div class="box-header p-0 pb-2 mb-3"><h3>Informations réservation</h3></div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Prêteur</label>
                                        {{ form_widget(form.preterPar) }}
                                        {{ form_errors(form.preterPar) }}
                                    </div>
                                </div>
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Etat</label>
                                        {{ form_widget(form.etat) }}
                                        {{ form_errors(form.etat) }}
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-success-light">Sauvegarder</button>
                        {{ form_end(form) }}
                    </div>


                </div>
            </div>
        </div>
    </div>
    <!-- FORMULAIRE ADD OBJETS -->

    <div id="modalResponse" class="modal" tabindex="-1" aria-modal="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header"><h4 class="modal-title">Résultat de votre recherche ISBN</h4></div>
                <div class="modal-body text-center p-lg">
                    <p>Aucune donnée ne correspondent à cet ISBN sur Google Books</p>
                    <p>Veuillez écrire manuellement les informations ou recherche l'ISBN avec le nom du livre sur <a class="text-primary" target="_blank" href="https://books.google.com/">https://books.google.com</a></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-grey p-x-md" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript">

        function checkUrlImage(url) {
            $("#saveButton").attr('disabled', 'disabled');
            if (url !== "") {
                $.ajax({
                    url: url,
                    type: 'HEAD',
                    success: function () {
                        $("#saveButton").removeAttr('disabled');
                    }
                });
            }
        }

        function removeSelectOption() {
            $('#livre_create_theme option:selected').removeAttr('selected');
        }

        function updateTheme(value) {
            $.ajax({
                url: "{{ path('api_theme_new') }}",
                type: "GET",
                data: {
                    nomTheme: value
                },
                dataType: "JSON",
                success: function (response) {
                    if (response.duplicate === false) {
                        $('#livre_create_theme').append('<option value="' + response.id + '">' + value + '</option>');
                        removeSelectOption();
                        $('#livre_create_theme option[value=' + response.id + ']').attr('selected', 'selected');
                    } else {
                        removeSelectOption();
                        $('#livre_create_theme option[value=' + response.id + ']').attr('selected', 'selected');
                    }
                },
                error: function (err) {
                    alert("Une erreur est survenue pendant le chargement des données. Essayer de vider le cache de votre navigateur internet.");
                }
            });
        }

        $('#buttonNewTheme').on('click', function () {
            var value = $('#inputNewTheme').val();
            updateTheme(value);
        });

        function clearFormInputs() {
            $('#livre_create_nom').val(null);
            $('#livre_create_auteur').val(null);
            $('#livre_create_anneeSortie').val(null);
            $('#livre_create_description').val(null);
            $('#livre_create_theme').val(null);
            $('#livre_create_urlImage').val(null);
            $('#img-preview-url').removeAttr('src');
            $('#img-preview-file').removeAttr('src');
        }
        
        function updateFormInputs(livre) {
            $('#livre_create_nom').val(livre["volumeInfo"]["title"]);


            if (typeof livre["volumeInfo"]["authors"][0] != 'undefined') {
                $('#livre_create_auteur').val(livre["volumeInfo"]["authors"][0]);
            }
            $('#livre_create_anneeSortie').val(livre["volumeInfo"]["publishedDate"]);

            if (typeof livre["volumeInfo"]["description"] != 'undefined') {
                $('#livre_create_description').val(livre["volumeInfo"]["description"]);
            } else {
                $('#livre_create_description').val('Aucune description trouvée pour ce livre');
            }

            if (typeof livre["volumeInfo"]["categories"] != 'undefined') {
                updateTheme(livre["volumeInfo"]["categories"][0]);
            } else {
                updateTheme('Pas de thème');
            }

            if (typeof livre["volumeInfo"]["imageLinks"] != 'undefined') {
                $('#img-preview-file').removeAttr('src');
                $("#livre_create_imageFile_file").val(null);
                $('#livre_create_urlImage').val(livre["volumeInfo"]["imageLinks"]["thumbnail"]);
                $('#img-preview-url').attr('src', livre["volumeInfo"]["imageLinks"]["thumbnail"]);
                $("#saveButton").removeAttr('disabled');
            } else {
                $('#img-preview-file').removeAttr('src');
                $("#livre_create_imageFile_file").val(null);
                $('#livre_create_urlImage').val('{{ absolute_url(asset('vich/livre_default.PNG')) }}');
                $('#img-preview-url').attr('src', "{{ absolute_url(asset('vich/livre_default.PNG')) }}");
            }
        }

        function getLivreDetails(isbn) {
            var key = "AIzaSyDFvXcx7oLtA_Ibapb7KveL8FtZF-k1Fsc";
            var url = "https://www.googleapis.com/books/v1/volumes?key=" + key + "&q=isbn:" + isbn;

            $.ajax({
                url: url,
                type: "GET",
                dataType: "JSON",
                success: function (response) {
                    if (response.totalItems) {
                        var livre = response.items[0];
                        updateFormInputs(livre);
                    } else {
                        $('#modalResponse').modal('show');
                    }
                },
                error: function (err) {
                    alert("Une erreur est survenue pendant le chargement des données. Essayer de vider le cache de votre navigateur internet.");
                }
            });
        }

        $('#searchButtonIsbn').on('click', function () {
            var value = $('#searchInputIsbn').val();
            clearFormInputs();
            getLivreDetails(value);
        });

        // preview image file before upload
        $(document).on('change', '#livre_create_imageFile_file', function () {
            var reader = new FileReader();
            reader.onload = e => {
                $('#img-preview-file').attr('src', e.target.result);
            };
            reader.readAsDataURL($('#livre_create_imageFile_file').prop('files')[0]);
            $('#livre_create_urlImage').val(null);
            $('#img-preview-url').removeAttr('src');
            $("#saveButton").removeAttr('disabled');
        });

        // preview image before upload
        $(document).on('change', '#livre_create_urlImage', function () {
            var url = $(this).val();
            checkUrlImage(url);
            $('#img-preview-url').attr('src', url);
            $("#livre_create_imageFile_file").val(null);
            $('#img-preview-file').removeAttr('src');
        });
    </script>
{% endblock %}

