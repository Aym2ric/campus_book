{% extends 'back/base_admin.html.twig' %}

{% block title %}Créer un livre{% endblock %}

{% block body %}

    <!-- BREADCRUMBS -->
    <div class="row pb-4">
        <div class="col-auto">
            <i class="fa fa-book circular circular-success"></i>
        </div>
        <div class="col pt-3">
            <h1 class="h1 bdc-title">Créer un livre</h1>
            <span class="text-grey">Gestion des livres</span>
        </div>
        <div class="col text-right">
            <a href="{{ path('livre_index') }}" class="btn btn-success-light btn-md">
                <i class="fa fa-table"></i>
                <span class="px-2 font-weight-normal">Liste</span></a>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-12">
            {{ wo_render_breadcrumbs() }}
        </div>
    </div>
    <!-- BREADCRUMBS -->

    <!-- FORMULAIRE ADD OBJETS -->
    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="box p-4">
                <div class="row">

                    <div class="col-md-6 col-sm-12">
                        <div class="box p-4">
                            <div class="box-header p-0 pb-2 mb-3"><h3>Informations générales</h3></div>
                            {{ form_errors(form) }}

                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Nom</label>
                                        {{ form_widget(form.nom) }}
                                        {{ form_errors(form.nom) }}
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Auteur</label>
                                        {{ form_widget(form.auteur) }}
                                        {{ form_errors(form.auteur) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Date de sortie</label>
                                        {{ form_widget(form.dateSortie) }}
                                        {{ form_errors(form.dateSortie) }}
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Description</label>
                                        {{ form_widget(form.description) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Type</label>
                                        {{ form_widget(form.type) }}
                                        {{ form_errors(form.type) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Thème</label>
                                        {{ form_widget(form.theme) }}
                                        {{ form_errors(form.theme) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Image</label>
                                        {{ form_widget(form.imageFile) }}
                                        {{ form_errors(form.imageFile) }}
                                    </div>
                                    <img class="max-width-10em" id="img-preview"
                                         {% if form.imageFile.vars.download_uri != null %}src="{{ form.imageFile.vars.download_uri }}"
                                         alt="{{ form.imageFile.vars.name }}"{% endif %} />
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-6 col-sm-12">
                        <div class="box p-4">
                            <div class="box-header p-0 pb-2 mb-3"><h3>Informations réservation</h3></div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Prêteur</label>
                                        {{ form_widget(form.preterPar) }}
                                        {{ form_errors(form.preterPar) }}
                                    </div>
                                </div>
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Etat</label>
                                        {{ form_widget(form.etat) }}
                                        {{ form_errors(form.etat) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="box p-4 mt-4">
                            <div class="box-header p-0 pb-2 mb-3"><h3>Gestion</h3></div>

                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Bloqué prochaine réservation ?</label>
                                        {{ form_widget(form.bloquerProchaineReservation) }}
                                        {{ form_errors(form.bloquerProchaineReservation) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-grey is-required">Réserver par (Emprunteur)</label>
                                        {{ form_widget(form.reserverPar) }}
                                        {{ form_errors(form.reserverPar) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>


                    <div class="col-12">
                        <button type="submit" class="btn btn-success-light">Sauvegarder</button>
                        {{ form_end(form) }}
                    </div>


                </div>
            </div>
        </div>
    </div>
    <!-- FORMULAIRE ADD OBJETS -->
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        $('#livre_edit_type').change(function () {
            var typeSelector = $(this);

            $.ajax({
                url: "{{ path('livre_ajax_themes_from_type') }}",
                type: "GET",
                dataType: "JSON",
                data: {
                    type_id: typeSelector.val()
                },
                success: function (themes) {
                    var themeSelect = $("#livre_edit_theme");
                    themeSelect.html('');
                    themeSelect.append('<option value> Veuillez choisir un Thème de ' + typeSelector.find("option:selected").text() + ' ...</option>');


                    $.each(themes, function (key, theme) {
                        themeSelect.append('<option value="' + theme.id + '">' + theme.nom + '</option>');
                    });
                },
                error: function (err) {
                    alert("An error ocurred while loading data ...");
                }
            });
        });

        // preview image before upload
        $('#livre_edit_imageFile_file').change(function () {
            var reader = new FileReader();
            reader.onload = e => {
                $('#img-preview').attr('src', e.target.result);
            }
            reader.readAsDataURL($('#livre_edit_imageFile_file').prop('files')[0]);
        });
    </script>
{% endblock %}
